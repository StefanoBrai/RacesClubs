@using ProgettoTest.Data.Enum
@model Race

<h1>Are you sure you want to delete this race?</h1>

<div>
    <h3>Race Details</h3>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.RaceCategory.ToString()</dd>
        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address.Street, @Model.Address.City, @Model.Address.State</dd>
        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            <img src="@Model.Image" alt="Club Image" style="max-width: 200px;" />
        </dd>
    </dl>
</div>

<form method="post" asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Confirm Delete" class="btn btn-danger float-right mt-3" />
    <a asp-action="Index" class="btn btn-secondary float-left mt-3">Cancel</a>
</form>